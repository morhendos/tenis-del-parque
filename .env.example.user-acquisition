# User Acquisition Environment Variables
# Copy this file to .env.local and fill in your actual values

# Database Connection (existing)
MONGODB_URI=mongodb://localhost:27017/tenis-del-parque

# NextAuth Configuration (existing)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# Resend Email Service (NEW - REQUIRED)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxx

# Email sender address (must be verified in Resend)
RESEND_FROM_EMAIL=noreply@tenisdelparque.com

# Public URL for your application (for links in emails)
NEXT_PUBLIC_URL=https://tenisdelparque.com

# Admin WhatsApp for support (with country code)
ADMIN_WHATSAPP=+34612345678

# Google Maps API (existing - if using maps features)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-key

# Vercel Blob Storage (existing - if using image uploads)
BLOB_READ_WRITE_TOKEN=your-blob-token

# Optional: Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_CLARITY_PROJECT_ID=your-clarity-id
