# Environment Variables for Simplified User Acquisition
# Copy this file to .env.local and fill in your values

# Database Connection
MONGODB_URI=mongodb://localhost:27017/tenis-del-parque

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# Email Configuration (Resend)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_YOUR_API_KEY_HERE
RESEND_FROM_EMAIL=noreply@tenisdelparque.com

# Application URLs
NEXT_PUBLIC_URL=https://tenisdelparque.com
VERCEL_URL=https://your-app.vercel.app

# WhatsApp Configuration
# Admin WhatsApp number for support (with country code)
ADMIN_WHATSAPP=+34612345678

# Google Maps API (if using clubs features)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-key

# Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_CLARITY_PROJECT_ID=your-clarity-id

# Feature Flags
NEXT_PUBLIC_ENABLE_WHATSAPP_GROUPS=true
NEXT_PUBLIC_ENABLE_EMAIL_NOTIFICATIONS=true

# Development/Production Mode
NODE_ENV=development
